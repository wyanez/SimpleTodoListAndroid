<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTitleTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:hint="Title of Task"
        android:inputType="text"
        android:maxLines="1">
    </EditText>

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTitleTask"
        android:hint="Description"
        android:inputType="text"
        android:paddingBottom="10dp"
        android:lines="3"
        android:maxLines="5"
        >
    </EditText>

    <TextView
        android:id="@+id/textPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDescription"
        android:text="Priority"
        android:paddingBottom="10dp"
        />

    <Spinner
        android:id="@+id/spinnerPriorityTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDescription"
        android:layout_alignBaseline="@+id/textPriority"
        android:layout_alignBottom="@+id/textPriority"
        android:layout_toEndOf="@id/textPriority"
        android:entries="@array/array_priorities"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/textDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPriority"
        android:text="Deadline"
        android:layout_alignBottom="@+id/editDeadline"
        android:layout_alignBaseline="@+id/editDeadline"
        android:paddingBottom="10dp"
        />

    <EditText
        android:id="@+id/editDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerPriorityTask"
        android:hint="dd/mm/yy"
        android:ems="10"
        android:inputType="date"
        android:layout_toEndOf="@id/textDeadline"
        android:paddingBottom="10dp"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDeadline"
        android:checked="true"
        android:text="Active" />


</RelativeLayout>